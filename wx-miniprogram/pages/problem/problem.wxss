/* pages/problem/problem.wxss */
page {
  background-color: #f6f7fc;
  width: 100%;
  height: 100%;
  padding-top: 24rpx;
}
.center {
  margin-top: 24rpx;
  width: 100%;
}
.pro {
  width: 91%;
  margin: 0 auto;
  height: 84rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #333;
  line-height: 84rpx;
  text-indent: 32rpx;
  font-weight: bold;
}
.cenHidden {
  width: 100%;
}
.answer {
  width: 82%;
  margin: 2rpx auto;
  background-color: #fff;
  padding: 32rpx 32rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}  
/*隐藏  */
.hide{
 display: none;
}
/*显示  */
.show{ 
 display: block;
}
.btn {
  width: 91%;
  height: 76rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  margin-top: 32rpx;
}